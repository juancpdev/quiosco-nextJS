generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Category {
  id       Int       @id @default(autoincrement()) 
  name     String
  slug     String    @unique
  icon     String
  products Product[]
}

model Product {
  id         Int             @id @default(autoincrement()) 
  name       String
  price      Float
  image      String
  available  Boolean         @default(true)
  categoryId Int
  category   Category        @relation(fields: [categoryId], references: [id])
  orderItems OrderProducts[]
  variants   ProductVariant[]
}

model ProductVariant {
  id        Int      @id @default(autoincrement())
  productId Int
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  name      String   // "250ml", "500ml"
  price     Float
  available Boolean  @default(true)
  createdAt DateTime @default(now())

  @@unique([productId, name]) // no duplicar variantes
}

model Table {
  id        Int      @id @default(autoincrement())
  number    Int      @unique
  status    String   @default("available") // "occupied" | "available"
  sessionId String?
  positionX Float    @default(0) 
  positionY Float    @default(0) 
  orders    Order[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Order {
  id            Int             @id @default(autoincrement())
  name          String
  phone         String?
  address       String?
  deliveryType  String          // "local" | "delivery"
  table         Int?
  tableId       Int?            
  tableModel    Table?          @relation(fields: [tableId], references: [id])
  sessionId     String?         // agrupar Ã³rdenes de la misma mesa
  paymentMethod String          // "efectivo" | "tarjeta"
  note          String?
  total         Float
  paymentInfo   Json?
  date          DateTime        @default(now())
  status        String          @default("pending") // "pending" | "completed"
  orderReadyAt  DateTime?
  createdBy     String          @default("client")
  orderProducts OrderProducts[]
}

model OrderProducts {
  id        Int     @id @default(autoincrement())
  orderId   Int
  order     Order   @relation(fields: [orderId], references: [id])
  productId Int
  product   Product @relation(fields: [productId], references: [id])
  quantity  Int
}